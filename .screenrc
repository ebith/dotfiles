defkanji utf-8
defencoding utf-8
encoding utf-8 utf-8
autodetach on
bell_msg "^G"
defscrollback 10000
escape ^Aa
startup_message off
vbell off

sorendition "= ck"
caption always "%{= ck} %?%h%:%t (screen #%n)%?"
hardstatus alwayslastline "%{= dd} %-w%{= gk}%n %t%{-}%+w %= %{= dm}%m/%0d %0C %A"

bind t screen
bind T title
bind h prev
bind l next
bind w windowlist -b
bind s
bind ; colon

bindkey "^[[1;5I" next
bindkey "^[[1;6I" prev

logfile "/home/ebith/.screen/%Y%m%d-%n.log"
log on
deflog on

defbce on
altscreen on

#Window Resize
bind r eval 'echo "Resize window"' 'command -c resize'
bind -c resize ^]  command
bind -c resize j eval 'resize +1' 'command -c resize'
bind -c resize k eval 'resize -1' 'command -c resize'
