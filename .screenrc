autodetach on
bell_msg "^G"
defkanji utf-8
defencoding utf-8
encoding utf-8 utf-8
defscrollback 10000
escape ^Aa
startup_message off
vbell off
caption always "%{= wb} %-w%{=bu dr}%n %t%{-}%+w %= %{=b wm}%l %{=b wb}%m/%0d %{=b wb}%0C %A"

bind t screen
bind T title
bind h prev
bind l next
bind w windowlist
bind s

bindkey "^[[1;5I" next
bindkey "^[[1;6I" prev

logfile "/home/ebith/.screen/%Y%m%d-%n.log"
log on
deflog on

defbce on
altscreen on

