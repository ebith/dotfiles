"2.0pre (created: 2009/01/11 07:30:03)
set runtimepath=D:\\work\\.home\\.vimperator

"色設定読み込み
colorscheme sweets

"ページ全体で検索語を強調表示
set hlsearch

"bookmarkToolbarを表示
set guioptions=B

" タブバーを常に表示
set stal=2

" 多めに移動
noremap j 5j
noremap k 5k

"US keyboard用
noremap ; :
noremap : ;


"コマンド履歴1000
set history=1000

"全部新タブ
set newtab=all

"補完系
set wildoptions=auto
set wildmode=list:full
set complete=sl


" 単語選択時の右側のスペース選択を行わない
set! layout.word_select.eat_space_to_next_word=false

set preload
set verbose=9
set visualbell

set suggestengines=google
set focuscontent

" ]]
set nextpattern+=^次.*,→,\bnext,>>,≫
" [[
set previouspattern+=^前.*,←,\bprev,<<,≪

set! browser.tabs.closeButtons=2
set! browser.enabel_automatic_image_resizing=false
set! layout.spellcheckDefault=2
set! spellchecker.dictionary=en-US


" 補完リストの選択をC-n,C-pで
cmap <C-n> <TAB>
cmap <C-p> <S-TAB>

" hlでタブ移動
map h <C-p>
map l <C-n>

" 最近閉じたタブリスト
map U ;u<Space>

" タブ一覧
map <C-w> ;buffer<SPACE>

"テキストエリア内での操作をWindowsと同様に
inoremap <C-a> <C-v><C-a>
inoremap <C-z> <C-v><C-z>
inoremap <C-x> <C-v><C-x>
inoremap <C-c> <C-v><C-c>
inoremap <C-v> <C-v><C-v>
cnoremap <C-a> <C-v><C-a>
cnoremap <C-z> <C-v><C-z>
cnoremap <C-x> <C-v><C-x>
cnoremap <C-c> <C-v><C-c>
cnoremap <C-v> <C-v><C-v>

"Quick Marks
qmark n http://nicovideo.jp/
qmark d http://delicious.com/ebith/
qmark o http://b.hatena.ne.jp/Oiraya/
qmark e http://b.hatena.ne.jp/ebith/
qmark f http://www.feelmy.net/freshreader/feedindex.php
qmark i http://i-know.jp/ebith/
qmark l http://reader.livedoor.com/reader/
qmark a http://mai-net.ath.cx/

"はてブコメント表示
map b ;hbinfo<CR>

"プラグイン設定
"migemo_hint.js
set hintmatching = custom 
	
" ime_controller.js
let g:ex_ime_mode = "inactive"
let g:textarea_ime_mode = "inactive"

" feed some keys2
autocmd LocationChange .* :fmapc
autocmd LocationChange www\\.feelmy\\.net/freshreader :fmap j k x e n p f i
autocmd LocationChange reader\\.livedoor\\.com/reader :fmap m g w j k s a p o v c <Space> <S-Space> z b < >

let g:direct_sbm_use_services_by_post = "h"
let g:direct_sbm_use_services_by_tag = "h"
let g:direct_sbm_is_normalize = "0"