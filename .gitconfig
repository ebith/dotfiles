[user]
  name = ebith
  email = ebith.h@gmail.com
[color]
  ui = true
[alias]
  add = add -v
  amend = commit --amend --date=now
  br = branch
  ci = commit -v
  co = checkout
  ls = log --stat
  l = log --graph --decorate --all --oneline
  sm = submodule
  st = status
  up = pull --rebase
  df = diff
  dfc = diff --cached
  wip = !git add -u && git ci -m 'WIP'
  pushf = push --force-with-lease --force-if-includes
[core]
  editor = vim
[push]
  default = simple
[rebase]
  autostash = true
[pull]
  rebase = true
[merge]
	tool = vscode

# “dandavison/delta: A viewer for git and diff output” https://github.com/dandavison/delta
[pager]
  diff = delta --color-only --syntax-theme OneHalfDark
[interactive]
  diffFilter = delta --color-only --syntax-theme OneHalfDark
[delta]
  features = decorations
  whitespace-error-style = 22 reverse
  side-by-side = true
[delta "decorations"]
  commit-decoration-style = bold yellow box ul
  file-style = bold yellow ul
  file-decoration-style = none

# GitHub
[url "git@github.com:"]
  pushinsteadof = https://github.com/
[github]
  user = ebith
[init]
  defaultBranch = main
