[user]
  name = ebith
  email = ebith.h@gmail.com
[color]
  ui = true
[alias]
  add = add -v
  amend = commit --amend --date=now
  br = branch
  ci = commit -v
  co = checkout
  ls = log --stat
  l = log --graph --decorate --all --oneline
  sm = submodule
  st = status
  up = pull --rebase
  df = diff
  dfc = diff --cached
  cancel = !git commit -a -m 'Temporary commit for cancel' && git reset --hard HEAD~
  ignore = update-index --assume-unchanged
  unignore = update-index --no-assume-unchanged
  ignored = !git ls-files -v | grep "^[a-z]"
  smup = "submodule foreach 'git fetch;git checkout origin/master'"
[core]
  editor = vim
[push]
  default = simple
[rebase]
  autostash=true
[url "git@github.com:"]
  pushinsteadof = https://github.com/
[ghq]
  root = ~/.ghq
  root = ~/.go/src
[github]
  user = ebith
[pager]
	log = diff-highlight | less
	show = diff-highlight | less
	diff = diff-highlight | less
[interactive]
	diffFilter = diff-highlight
[diff]
	compactionHeuristic = true
