[user]
  name = ebith
  email = ebith.h@gmail.com
[color]
  ui = true
[alias]
  add = add -v
  amend = commit -a --amend --no-edit
  br = branch
  ci = commit -v
  co = checkout
  ls = log --stat
  sm = submodule
  st = status
  up = pull --rebase
  df = diff
  dfc = diff --cached
  cancel = !git commit -a -m 'Temporary commit for cancel' && git reset --hard HEAD~
[core]
  whitespace = cr-at-eol
  editor = vim
  excludesfile = ~/.gitignore.global
  filemode = false
  autocrlf = false
  safecrlf = false
  quotepath = false
[i18n]
  commitencoding = UTF-8
[push]
  default = simple
